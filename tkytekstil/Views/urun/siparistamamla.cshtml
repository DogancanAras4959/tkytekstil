@{
    ViewData["Title"] = "siparistamamla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .section, .section-fluid {
        float: none;
        width: 100%;
    }

    .css-4276uk-Popup-Box-Box {
        padding: 16px;
        background-color: rgb(248, 249, 250) !important;
        width: 100% !important;
        max-width: 500px !important;
        margin: 50px auto !important;
    }

    .section-margin {
        margin-top: 45px;
        margin-bottom: 12px;
    }
</style>

<div class="section section-margin">
    <div class="container">
        <div class="row mb-n10">
            <div class="col-lg-12 col-md-12 m-auto m-lg-12 pb-5">
                <div class="payment-accordion-order-button">
                    <div class="payment-accordion">
                        <div class="single-payment">
                            <h5 class="panel-title mb-3">
                                <a class="collapse-off" data-bs-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                    Ödemenizi Gerçekleştirin
                                </a>
                            </h5>
                            <div class="collapse show" id="collapseExample">
                                <div class="card card-body rounded-0">
                                    <p>Siparişinizin ödeme işlemini tamamlamanıza birkaç adım kaldı. Ödemenizi gerçekleştirdikten sonra sizinle iletişime geçeceğiz</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Raw(ViewBag.Iyzico)

<div id="iyzipay-checkout-form" class="responsive"></div>

<div class="row">
    <div class="col-sm-12">
        <p>@ViewBag.Error</p>
    </div>
</div>
