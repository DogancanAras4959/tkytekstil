@model IEnumerable<tkytekstil.ENGINE.Dtos.CategoryData.CategoriesDto>
@{
    ViewData["Title"] = "kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Oluşturulma</th>
                                <th>Durum</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.ID</th>
                                    <td>@item.CategoryName</td>
                                    <td>@item.CreatedTime.ToString("MM/dd/yyyy HH:mm")</td>
                                    @if (item.IsActive == true)
                                    {
                                        <td>Aktif</td>
                                    }
                                    else
                                    {
                                        <td>Pasif</td>
                                    }
                                <td>
                                    <a class="btn btn-outline-secondary btn-sm edit" title="Düzenle" href="@Url.Action("kategoriduzenle","urun", new { Id = item.ID })">
                                        <i class="fas fa-pencil-alt" title="Edit"></i>
                                    </a>
                                    <a class="btn btn-outline-secondary btn-sm deleted" title="Sil" href="@Url.Action("kategorisil","urun", new { Id = item.ID })">
                                        <i class="fas fa-trash" title="Delete"></i>
                                    </a>
                                    <a class="btn btn-outline-secondary btn-sm above" title="Aktif/Pasif" href="@Url.Action("kategoridurumduzenle","urun", new { Id = item.ID })">
                                        <i class="fas fa-wifi" title="Aktif/Pasif"></i>
                                    </a>
                                </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>


