@model tkytekstil.editor.Models.LoginViewModel
@{ 
    Layout = null;
}

<html lang="en">
<head>

    <meta charset="utf-8">
    <title>Tekay Tekstil | Yönetim Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Tekay Tekstil | Yönetim Paneli" name="description">
    <meta content="Themesdesign" name="author">
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css">
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css">
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css">

</head>

<body class="auth-body-bg">
    <div>
        <div class="container-fluid p-0">
            <div class="row g-0">
                <div class="col-lg-4">
                    <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                        <div class="w-100">
                            <div class="row justify-content-center">
                                <div class="col-lg-9">
                                    <div>

                                        @*<div class="text-center">
                                            <div>
                                                <a href="https://www.tkytekstil.com" class="">
                                                    <img src="~/assets/images/tkylogo.png" alt="" height="90" class="auth-logo logo-dark mx-auto">
                                                    <img src="~/assets/images/tkylogo.png" alt="" height="90" class="auth-logo logo-light mx-auto">
                                                </a>
                                                <h4 class="font-size-18 mt-4">Tekrar Hoşgeldiniz!</h4>
                                                <p class="text-muted">Yönetici Paneline devam etmek için giriş yap.</p>
                                            </div>
                                        </div>*@

                                        <div class="p-2 mt-3">
                                            <form asp-controller="hesap" asp-action="girisyaplogin" class="form-horizontal">

                                                <div class="mb-3 auth-form-group-custom mb-4">
                                                    <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                    <label for="username">Kullanıcı Adı</label>
                                                    @Html.TextBoxFor(x => x.username, new { @type = "text", @class = "form-control", id = "username", placeholder = "Kullanıcı adınız", autocomplete = "off" })
                                                </div>

                                                <div class="mb-3 auth-form-group-custom mb-4">
                                                    <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                    <label for="userpassword">Şifre</label>
                                                    @Html.TextBoxFor(x => x.password, new { @type = "password", @class = "form-control", id = "userpassword", placeholder = "Şifreniz", autocomplete = "off" })
                                                </div>

                                                <div class="mt-4 text-center">
                                                    <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Giriş Yap</button>
                                                </div>

                                            </form>
                                        </div>

                                        <div class="mt-2 text-center">
                                            <p>
                                                ©
                                                <script>document.write(new Date().getFullYear())</script> Tüm Hakları Saklıdır <i class="mdi mdi-earth text-danger"></i> <a href="https://www.tkytekstil.com" target="_blank">Tekay Tekstil</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="authentication-bg">
                        <div class="bg-overlay"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- JAVASCRIPT -->
    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>

    <script src="~/assets/js/app.js"></script>

    <script type="text/javascript">$(document).ready(function () {
            $("#btn-log").on("click", function () {
                document.getElementById("loginOnProcess").style.display = "block";
                document.getElementById("lastLoginTime").style.display = "none";
                window.setTimeout(function () {
                    $("#btn-log").attr("disabled", true);
                }, 100);
            });
        })</script>


</body>
</html>