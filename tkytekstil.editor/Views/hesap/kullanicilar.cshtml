@model IEnumerable<tkytekstil.ENGINE.Dtos.UserData.UserDto>
@{
    ViewData["Title"] = "kullanicilar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kullanıcı Adı</th>
                                <th>Görünen</th>
                                <th>Oluşturulma</th>
                                <th>Güncelleme</th>
                                <th>Rol</th>
                                <th>Durum</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <th scope="row">@item.ID</th>
                                <td>@item.UserName</td>
                                <td>@item.DisplayName</td>
                                <td>@item.CreatedTime.ToString("MM/dd/yyyy HH:mm")</td>
                                <td>@item.UpdatedTime.ToString("MM/dd/yyyy HH:mm")</td>
                                <td>@item.role.roleName</td>
                                @if (item.IsActive == true)
                                {
                                    <td>Aktif</td>
                                }
                                else
                                {
                                    <td>Pasif</td>
                                }
                            <td>
                                <a class="btn btn-outline-secondary btn-sm edit" title="Düzenle" href="@Url.Action("kullaniciduzenle","hesap", new { Id = item.ID })">
                                    <i class="fas fa-pencil-alt" title="Edit"></i>
                                </a>
                                <a class="btn btn-outline-secondary btn-sm deleted" title="Sil" href="@Url.Action("kullanicisil","hesap", new { Id = item.ID })">
                                    <i class="fas fa-trash" title="Delete"></i>
                                </a>
                                <a class="btn btn-outline-secondary btn-sm above" title="Aktif/Pasif" href="@Url.Action("kullanicidurumduzenle","hesap", new { Id = item.ID })">
                                    <i class="fas fa-wifi" title="Aktif/Pasif"></i>
                                </a>
                            </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>


